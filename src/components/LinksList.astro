---
import { links } from "../data/links";
import LinkItem from "./LinkItem.astro";

// In future we could accept props (filtering, category grouping, etc.)
---

<section class="links-section fade-in">
  <div class="links-grid">
    {links.map((l) => <LinkItem link={l} />)}
  </div>
</section>

<style>
  .links-section {
    width: min(1100px, 92%);
    margin: 0 auto;
    /* Reduce large bottom padding that created unnecessary space */
    padding: 0 0 clamp(28px, 6vh, 60px);
  }
  .links-grid {
    display: grid;
    gap: 24px;
    align-items: stretch;
    grid-template-columns: 1fr;
  }
  @media (max-width: 640px) {
    .links-grid {
      gap: 18px;
    }
  }
</style>

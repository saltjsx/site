---
import { links } from "../data/links";
import LinkItem from "./LinkItem.astro";

// In future we could accept props (filtering, category grouping, etc.)
---

<section class="links-section fade-in">
  <div class="links-grid">
    {links.map((l) => <LinkItem link={l} />)}
  </div>
</section>

<style>
  .links-section {
    width: min(1100px, 92%);
    margin: 0 auto;
    padding: 0 0 clamp(100px, 14vh, 160px);
  }
  .links-grid {
    display: grid;
    gap: 24px;
    align-items: stretch;
  }
  @media (min-width: 720px) {
    .links-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }
  @media (min-width: 1080px) {
    .links-grid {
      grid-template-columns: repeat(3, minmax(0, 1fr));
    }
  }
  @media (max-width: 640px) {
    .links-grid {
      gap: 18px;
    }
  }
</style>

---
import DatabuddyLayout from "../layouts/DatabuddyLayout.astro";
import { Image } from "astro:assets";
import imageOfPerth from "../assets/imageofperth.png";
---

<DatabuddyLayout title="salt - about" description="About salt">
  <main class="page-wrap">
    <section class="hero">
      <div class="container">
        <div
          class="hero__card glass-intense card anim-fade-scale anim-base anim-seq"
          style="--delay:140ms"
        >
          <h1 class="title anim-tilt-in anim-base" style="--delay:220ms">
            about me
          </h1>
          <p class="body-text anim-fade-left anim-base" style="--delay:260ms">
            hey there! i'm salt, a software dev from australia. i love coding,
            design, and public transit. i made this website using astro, and
            it's hosted on vercel.
          </p>
          <p class="body-text anim-fade-up anim-base" style="--delay:300ms">
            i love helping people out and making random stuff. if you want to dm
            me, check out my <a href="/links">links page.</a>
          </p>
          <p class="body-text anim-fade-right anim-base" style="--delay:340ms">
            i enjoy playing minecraft, roblox, kerbal space program and other
            friendslop games. i also enjoy watching and making youtube videos.
          </p>
          <div class="about-image-container anim-soft-in anim-base" style="--delay:380ms">
            <Image
              src={imageOfPerth}
              alt="Skyline view of Perth, Australia"
              class="about-image"
            />
          </div>
        </div>
      </div>
    </section>
  </main>
</DatabuddyLayout>

<style>
  .about-image-container {
    border-radius: var(--radius-lg);
    overflow: hidden;
    border: 1px solid rgb(var(--glass) / 0.2);
    box-shadow: 0 8px 32px -8px rgb(0 0 0 / 0.5);
    /* Glass feel container */
    background: rgb(var(--glass) / 0.05);
    padding: 4px;
  }
  .about-image {
    border-radius: calc(var(--radius-lg) - 4px);
    display: block;
    width: 100%;
    transition: transform var(--motion-duration-sm)
      var(--motion-ease-emphasized);
    will-change: transform;
  }
  .about-image:hover {
    transform: scale(1.05);
  }
</style>

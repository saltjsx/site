---
import DatabuddyLayout from "../layouts/DatabuddyLayout.astro";
import BlogPostList from "../components/BlogPostList.astro";
---

<DatabuddyLayout title="salt - blog" description="salt's blog posts">
  <main class="page-wrap">
    <section class="hero">
      <div class="container">
        <div
          class="hero__card glass-strong card anim-fade-scale anim-base blog-card anim-seq"
          style="--delay:140ms"
        >
          <h1 class="title anim-tilt-in anim-base" style="--delay:220ms">
            blog
          </h1>
          <p class="body-text anim-blur-in anim-base" style="--delay:260ms">
            thoughts, ideas, and things i'm learning
          </p>
          <div class="blog-card-grid">
            <BlogPostList />
          </div>
        </div>
      </div>
    </section>
  </main>
</DatabuddyLayout>

<style>
  .blog-card {
    text-align: center;
    width: min(1180px, 100%);
  }
  .blog-card .body-text {
    max-width: 46ch;
    margin-inline: auto;
  }
  .blog-card :where(h1, p) {
    margin-left: auto;
    margin-right: auto;
  }
  .blog-card-grid {
    width: 100%;
    margin-top: clamp(34px, 5vh, 60px);
  }
  /* Let inner grid stretch without shrinking hero card's centered layout */
  .blog-card-grid :where(.blog-section) {
    width: 100%;
  }
  @media (max-width: 720px) {
    .blog-card {
      padding: 20px 18px;
    }
    .blog-card-grid {
      margin-top: 28px;
    }
  }
</style>
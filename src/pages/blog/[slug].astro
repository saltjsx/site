---
import DatabuddyLayout from "../../layouts/DatabuddyLayout.astro";
import { zenblog } from '../../utils/zenblog';
import type { PostWithContent } from '@zenblog/types';

export async function getStaticPaths() {
  try {
    // Get all posts to generate static paths
    const response = await zenblog.posts.list({ limit: 100 });
    const posts = response.data || [];
    
    return posts.map((post) => ({
      params: { slug: post.slug },
      props: { post },
    }));
  } catch (error) {
    console.error('Error fetching blog posts:', error);
    return [];
  }
}

const { post } = Astro.props;

// Format date helper
function formatDate(dateString: string): string {
  const date = new Date(dateString);
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}

// Get full post with content
let fullPost: PostWithContent | null = null;
try {
  const response = await zenblog.posts.get({ slug: post.slug });
  fullPost = response.data;
} catch (error) {
  console.error('Error fetching post content:', error);
}
---

<DatabuddyLayout 
  title={`salt - ${fullPost.title}`} 
  description={fullPost.excerpt || `Read ${fullPost.title} on salt's blog`}
>
  <main class="page-wrap">
    <section class="hero">
      <div class="container">
        <div class="blog-post-hero glass-strong card anim-fade-scale anim-base">
          <div class="blog-post-header">
            <div class="blog-post-meta">
              {post.category && (
                <span class="blog-category">{post.category.name}</span>
              )}
              <time class="blog-date" datetime={post.published_at}>
                {formatDate(post.published_at)}
              </time>
            </div>
            
            <h1 class="blog-post-title anim-tilt-in anim-base" style="--delay:200ms">
              {fullPost.title}
            </h1>
            
            {post.authors && post.authors.length > 0 && (
              <div class="blog-author-section">
                {post.authors.map((author) => (
                  <div class="blog-author">
                    {author.image_url && (
                      <img 
                        src={author.image_url} 
                        alt={author.name}
                        class="author-avatar"
                      />
                    )}
                    <div class="author-info">
                      <div class="author-name">{author.name}</div>
                      {(author.twitter_url || author.website_url) && (
                        <div class="author-links">
                          {author.twitter_url && (
                            <a href={author.twitter_url} class="author-link" target="_blank">
                              Twitter
                            </a>
                          )}
                          {author.website_url && (
                            <a href={author.website_url} class="author-link" target="_blank">
                              Website
                            </a>
                          )}
                        </div>
                      )}
                    </div>
                  </div>
                ))}
              </div>
            )}
            
            {post.tags && post.tags.length > 0 && (
              <div class="blog-tags-section">
                {post.tags.map((tag) => (
                  <span class="blog-tag">{tag.name}</span>
                ))}
              </div>
            )}
          </div>
          
          {fullPost ? (
            <div class="blog-post-content anim-fade-up anim-base" style="--delay:300ms">
              <div class="blog-content" set:html={fullPost.html_content} />
            </div>
          ) : (
            <div class="blog-error glass card">
              <p>Sorry, this post could not be loaded.</p>
            </div>
          )}
          
          <div class="blog-navigation anim-fade-up anim-base" style="--delay:400ms">
            <a href="/blog" class="back-to-blog glass">
              ‚Üê Back to Blog
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
</DatabuddyLayout>

<style>
  .blog-post-hero {
    text-align: center;
    width: min(900px, 100%);
    padding: clamp(24px, 3vw, 40px);
    margin-bottom: clamp(20px, 3vw, 32px);
    margin-inline: auto;
  }

  .blog-post-header {
    margin-bottom: clamp(24px, 4vw, 40px);
  }

  .blog-post-meta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 12px;
    margin-bottom: 16px;
    font-size: 0.9rem;
    color: rgb(var(--text-1));
  }

  .blog-category {
    background: rgb(var(--accent-1) / 0.15);
    color: rgb(var(--accent-1));
    padding: 6px 12px;
    border-radius: var(--radius-sm);
    font-weight: 500;
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .blog-date {
    color: rgb(var(--text-1));
    font-weight: 400;
  }

  .blog-post-title {
    display: block;
    margin: 0 0 20px 0;
    font-size: clamp(1.8rem, 1.6rem + 1.2vw, 2.8rem);
    line-height: 1.2;
    letter-spacing: -0.02em;
    color: rgb(var(--accent-1));
    filter: drop-shadow(0 2px 18px rgb(var(--accent-1) / 0.18));
  }

  .blog-author-section {
    display: flex;
    flex-direction: column;
    gap: 16px;
    margin-bottom: 24px;
  }

  .blog-author {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .author-avatar {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid rgb(var(--glass) / 0.2);
  }

  .author-info {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .author-name {
    font-weight: 600;
    color: rgb(var(--text-0));
  }

  .author-links {
    display: flex;
    gap: 12px;
    font-size: 0.85rem;
  }

  .author-link {
    color: rgb(var(--accent-1));
    text-decoration: none;
    padding: 4px 8px;
    border-radius: var(--radius-sm);
    transition: background var(--motion-duration-sm) var(--motion-ease-standard);
  }

  .author-link:hover {
    background: rgb(var(--accent-1) / 0.1);
  }

  .blog-tags-section {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-bottom: 24px;
  }

  .blog-tag {
    background: rgb(var(--glass) / 0.12);
    color: rgb(var(--text-1));
    padding: 6px 12px;
    border-radius: var(--radius-sm);
    font-size: 0.85rem;
    font-weight: 500;
    border: 1px solid rgb(var(--glass) / 0.2);
  }

  .blog-post-content {
    margin-top: 32px;
    text-align: left;
  }

  .blog-content {
    line-height: 1.7;
    color: rgb(var(--text-0));
    text-align: left;
  }

  /* Style ZenBlog HTML content to match our design */
  .blog-content :global(h1),
  .blog-content :global(h2),
  .blog-content :global(h3),
  .blog-content :global(h4),
  .blog-content :global(h5),
  .blog-content :global(h6) {
    color: rgb(var(--text-0));
    margin-top: 2em;
    margin-bottom: 1em;
    line-height: 1.3;
  }

  .blog-content :global(h1) {
    font-size: 2em;
    font-weight: 700;
  }

  .blog-content :global(h2) {
    font-size: 1.5em;
    font-weight: 600;
  }

  .blog-content :global(h3) {
    font-size: 1.25em;
    font-weight: 600;
  }

  .blog-content :global(p) {
    margin-bottom: 1.2em;
    color: rgb(var(--text-0));
  }

  .blog-content :global(a) {
    color: rgb(var(--accent-1));
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: border-color var(--motion-duration-sm) var(--motion-ease-standard);
  }

  .blog-content :global(a:hover) {
    border-bottom-color: rgb(var(--accent-1));
  }

  .blog-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: var(--radius-md);
    margin: 1.5em 0;
  }

  .blog-content :global(blockquote) {
    border-left: 4px solid rgb(var(--accent-1));
    padding-left: 1.5em;
    margin: 1.5em 0;
    color: rgb(var(--text-1));
    font-style: italic;
  }

  .blog-content :global(code) {
    background: rgb(var(--bg-1));
    color: rgb(var(--accent-1));
    padding: 0.2em 0.4em;
    border-radius: var(--radius-sm);
    font-family: 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, 'Courier New', monospace;
    font-size: 0.9em;
  }

  .blog-content :global(pre) {
    background: rgb(var(--bg-1));
    border: 1px solid rgb(var(--glass) / 0.2);
    border-radius: var(--radius-md);
    padding: 1.5em;
    overflow-x: auto;
    margin: 1.5em 0;
  }

  .blog-content :global(pre code) {
    background: transparent;
    padding: 0;
  }

  .blog-content :global(ul),
  .blog-content :global(ol) {
    margin: 1.5em 0;
    padding-left: 2em;
  }

  .blog-content :global(li) {
    margin-bottom: 0.5em;
    color: rgb(var(--text-0));
  }

  .blog-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5em 0;
  }

  .blog-content :global(th),
  .blog-content :global(td) {
    border: 1px solid rgb(var(--glass) / 0.2);
    padding: 0.75em;
    text-align: left;
  }

  .blog-content :global(th) {
    background: rgb(var(--bg-1));
    font-weight: 600;
  }

  .blog-error {
    text-align: center;
    padding: 40px;
    color: rgb(var(--text-1));
  }

  .blog-navigation {
    margin-top: 48px;
    text-align: center;
  }

  .back-to-blog {
    display: inline-flex;
    align-items: center;
    padding: 12px 24px;
    border-radius: var(--radius-pill);
    text-decoration: none;
    color: rgb(var(--text-0));
    font-weight: 500;
    transition: all var(--motion-duration-sm) var(--motion-ease-standard);
  }

  .back-to-blog:hover {
    background: rgb(var(--glass) / 0.12);
    transform: translateY(-2px);
  }

  @media (max-width: 720px) {
    .blog-post-hero {
      padding: 20px 18px;
      text-align: center;
    }

    .blog-post-title {
      font-size: 1.8rem;
      /* Ensure title is visible on mobile */
      @supports not (-webkit-background-clip: text) {
        color: rgb(var(--accent-1)) !important;
        -webkit-text-fill-color: rgb(var(--accent-1)) !important;
      }
    }

    .blog-author {
      flex-direction: column;
      align-items: flex-start;
      gap: 8px;
    }

    .author-avatar {
      width: 40px;
      height: 40px;
    }

    .blog-tags-section {
      gap: 6px;
    }

    .blog-tag {
      font-size: 0.8rem;
      padding: 4px 8px;
    }
  }
</style>
---
import Navbar from "../components/Navbar.astro";
import "../styles/globals.css";
import { Image } from "astro:assets";
import saltRed from "../assets/salt red.png";
---

<Navbar />

<main class="page-wrap">
  <section class="hero">
    <div class="container">
      <div class="hero__card glass-strong card hero-in">
        <p class="definition fade-in-delayed">zout -&gt; salt</p>
        <Image
          src={saltRed}
          alt="Salt Logo"
          width={120}
          height={120}
          class="content-logo float-in"
          draggable={false}
        />
        <h1 class="title pop-in">salt</h1>
        <h2 class="subtitle fade-in">hello, world</h2>
        <p class="body-text fade-in">i'm just a nerdy guy who likes software</p>
      </div>
    </div>
  </section>
</main>

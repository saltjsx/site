---
import "../styles/globals.css";
import Navbar from "../components/Navbar.astro";
import saltRed from "../assets/salt red.png";
import LinksList from "../components/LinksList.astro";
---

<head>
  <meta charset="UTF-8" />
  <meta
    name="viewport"
    content="width=device-width, initial-scale=1, viewport-fit=cover"
  />
  <link rel="icon" type="image/png" href={saltRed.src} />
  <link rel="shortcut icon" type="image/png" href={saltRed.src} />
  <link rel="apple-touch-icon" href={saltRed.src} />
  <title>salt - links</title>
</head>

<Navbar />

<main class="links-page page-wrap">
  <header class="links-hero container hero-in">
    <h1 class="links-title title pop-in">links</h1>
    <p class="links-tagline body-text fade-in">
      Find me & my work around the web
    </p>
  </header>
  <LinksList />
</main>

<style>
  .links-page {
    display: grid;
    gap: clamp(30px, 4vh, 60px);
  }
  .links-hero {
    text-align: center;
    padding: clamp(40px, 8vh, 120px) 0 0;
    display: grid;
    gap: 10px;
    justify-items: center;
    position: relative;
  }
  .links-title {
    margin: 0;
  }
  .links-tagline {
    margin: 0;
    max-width: 46ch;
  }

  /* subtle ambient glow behind heading */
  .links-hero::after {
    content: "";
    position: absolute;
    inset: 0;
    background: radial-gradient(
        600px 320px at 50% 10%,
        rgb(var(--accent-1) / 0.18),
        transparent 70%
      ),
      radial-gradient(
        800px 500px at 50% 60%,
        rgb(var(--accent-2) / 0.22),
        transparent 75%
      );
    opacity: 0.5;
    pointer-events: none;
    mix-blend-mode: screen;
  }

  @media (max-width: 640px) {
    .links-page {
      gap: 30px;
    }
    .links-hero {
      padding-top: clamp(30px, 7vh, 80px);
    }
  }
</style>

---
import DatabuddyLayout from "../layouts/DatabuddyLayout.astro";
import { links } from "../data/links";
---

<DatabuddyLayout title="salt - links" description="Links to salt's stuff">
  <main class="page-wrap">
    <div class="container">
      <div class="terminal">
        <div class="terminal-line">
          <span class="line-number">1</span>
          <span class="line-content md-h1"># links</span>
        </div>
        <div class="terminal-line">
          <span class="line-number">2</span>
          <span class="line-content">find me around the web</span>
        </div>
        <div class="terminal-line">
          <span class="line-number">3</span>
          <span class="line-content">&nbsp;</span>
        </div>
        {
          links.map((link, i) => (
            <div class="terminal-line">
              <span class="line-number">{i + 4}</span>
              <span class="line-content">
                <a href={link.url} target="_blank" rel="noopener noreferrer">
                  {link.title.toLowerCase()}
                </a>
                {link.description && (
                  <span class="comment"> - {link.description}</span>
                )}
              </span>
            </div>
          ))
        }
      </div>
    </div>
  </main>
</DatabuddyLayout>

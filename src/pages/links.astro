---
import "../styles/globals.css";
import Navbar from "../components/Navbar.astro";
import saltRed from "../assets/salt red.png";
import LinksList from "../components/LinksList.astro";
import { Databuddy } from "@databuddy/sdk";
---

<head>
  <meta charset="UTF-8" />
  <meta
    name="viewport"
    content="width=device-width, initial-scale=1, viewport-fit=cover"
  />
  <link rel="icon" type="image/png" href={saltRed.src} />
  <link rel="shortcut icon" type="image/png" href={saltRed.src} />
  <link rel="apple-touch-icon" href={saltRed.src} />
  <title>salt - links</title>
  <Databuddy
    clientId="rALU52_genirbSWfxdhia"
    trackHashChanges={true}
    trackAttributes={true}
    trackOutgoingLinks={true}
    trackInteractions={true}
    trackEngagement={true}
    trackScrollDepth={true}
    trackExitIntent={true}
    trackBounceRate={true}
    trackWebVitals={true}
    trackErrors={true}
    enableBatching={true}
  />
</head>

<Navbar />

<main class="page-wrap">
  <section class="hero">
    <div class="container">
      <div
        class="hero__card glass-strong card anim-fade-scale anim-base links-card"
        style="--delay:140ms"
      >
        <h1 class="title anim-fade-scale anim-base" style="--delay:220ms">
          links
        </h1>
        <p class="body-text anim-fade anim-base" style="--delay:260ms">
          find me & my work around the web
        </p>
        <div class="links-card-grid">
          <LinksList />
        </div>
      </div>
    </div>
  </section>
</main>

<style>
  .links-card {
    text-align: center;
    width: min(1180px, 100%);
  }
  .links-card .body-text {
    max-width: 46ch;
    margin-inline: auto;
  }
  .links-card :where(h1, p) {
    margin-left: auto;
    margin-right: auto;
  }
  .links-card-grid {
    width: 100%;
    margin-top: clamp(34px, 5vh, 60px);
  }
  /* Let inner grid stretch without shrinking hero card's centered layout */
  .links-card-grid :where(.links-section) {
    width: 100%;
  }
  @media (max-width: 720px) {
    .links-card {
      padding: 20px 18px;
    }
    .links-card-grid {
      margin-top: 28px;
    }
  }
</style>

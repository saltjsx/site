---
import DatabuddyLayout from "../layouts/DatabuddyLayout.astro";
import { portfolio } from "../data/portfolio";
import { Image } from "astro:assets";
---

<DatabuddyLayout title="salt - portfolio" description="salt's projects">
  <main class="page-wrap">
    <div class="container">
      <div class="terminal">
        <div class="terminal-line">
          <span class="line-number">1</span>
          <span class="line-content md-h1"># portfolio</span>
        </div>
        <div class="terminal-line">
          <span class="line-number">2</span>
          <span class="line-content">my random bs.</span>
        </div>
      </div>

      <div class="portfolio-list">
        {
          portfolio.map((item) => (
            <a
              href={item.url}
              class="portfolio-item"
              target="_blank"
              rel="noopener noreferrer"
            >
              <Image
                src={item.image}
                alt={item.title}
                class="portfolio-image"
              />
              <div class="portfolio-content">
                <div class="portfolio-title">{item.title}</div>
                <div class="portfolio-description">{item.description}</div>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </main>
</DatabuddyLayout>
